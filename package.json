{
  "name": "get-tdd",
  "version": "1.0.0",
  "description": "Examples of how to TDD in TypeScript",
  "main": "build/index.js",
  "scripts": {
    "build": "tsc --build tsconfig.json",
    "dev": "run-p watch-ts watch-server",
    "start": "node ./build/index.js",
    "test": "jest",
    "watch-test": "jest --watch --all --coverage=false",
    "watch-server": "nodemon --delay 250ms --ext js,json --watch build --exec 'npm start'",
    "watch-ts": "tsc-watch --noClear -p tsconfig.json"
  },
  "keywords": [
    "tdd"
  ],
  "author": {
    "name": "peter.banjo"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged --allow-empty"
    }
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  },
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^27.0.1",
    "husky": "^7.0.2",
    "jest": "^27.1.1",
    "lint-staged": "^11.1.2",
    "nodemon": "^2.0.12",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.4.0",
    "pretty-quick": "^3.1.1",
    "ts-jest": "^27.0.5",
    "tsc-watch": "^4.5.0",
    "typescript": "^4.4.3"
  },
  "dependencies": {
    "currency.js": "^2.0.4",
    "fastify": "^3.21.0"
  }
}
